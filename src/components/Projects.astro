---
import Carousel from './Carousel.astro';

const featuredProjects = [
	{
		title: 'VisiónInversora',
		description: 'Aplicación web que calcula y muestra en tiempo real precios estimados de acciones del mercado de valores mediante fórmulas.',
		image: '/VisionInversora.webp?height=300&width=500',
		tags: ['React', 'TipeScript', 'NextJS', 'Modules CSS', 'Vercel'],
		preview: 'https://vision-inversora.vercel.app/',
		code: 'https://github.com/fvargas1644/vision-inversora',
		featured: true
	},
	{
		title: 'WazuhAI',
		description: 'Se integra Wazuh con modelos LLM, como GPT, para analizar eventos y detectar posibles amenazas.',
		image: '/WazuhAI.webp?height=300&width=500',
		tags: ['Python', 'OpenAI', 'Wazuh', "LLMs"],
		preview: null,
		code: null,
		featured: true
	}
];

const otherProjects = [
	{
		title: 'Sitio Web Corporativo',
		description: 'Sitio web responsive para empresa de tecnología con panel de administración.',
		image: '/placeholder.svg?height=300&width=500',
		tags: ['HTML/CSS', 'JavaScript', 'PHP', 'MySQL'],
		link: '#'
	},
	{
		title: 'Aplicación Móvil',
		description: 'App móvil para seguimiento de hábitos y productividad personal.',
		image: '/placeholder.svg?height=300&width=500',
		tags: ['React Native', 'Redux', 'Firebase'],
		link: '#'
	},
	{
		title: 'Plataforma Educativa',
		description: 'Sistema de gestión de aprendizaje con cursos, evaluaciones y certificaciones.',
		image: '/placeholder.svg?height=300&width=500',
		tags: ['Next.js', 'GraphQL', 'MongoDB', 'AWS'],
		link: '#'
	},
	{
		title: 'Aplicación de Finanzas',
		description: 'Herramienta para gestión de finanzas personales y seguimiento de gastos.',
		image: '/placeholder.svg?height=300&width=500',
		tags: ['React', 'Redux', 'Node.js', 'MySQL'],
		link: '#'
	},
	{
		title: 'Red Social Temática',
		description: 'Plataforma social para conectar personas con intereses similares.',
		image: '/placeholder.svg?height=300&width=500',
		tags: ['Vue.js', 'Firebase', 'Vuex', 'Cloud Functions'],
		link: '#'
	},
	{
		title: 'API RESTful',
		description: 'Desarrollo de API para integración de servicios de terceros.',
		image: '/placeholder.svg?height=300&width=500',
		tags: ['Node.js', 'Express', 'MongoDB', 'JWT'],
		link: '#'
	}
];
---

<section id="projects" class="bg-gray-50 py-16">
	<div class="container mx-auto px-4">
		<h2 class="text-3xl md:text-4xl font-bold text-center mb-16">Mis Proyectos</h2>
		
		<!-- Proyectos Destacados -->
		<h3 class="text-2xl font-semibold mb-8">Proyectos Destacados</h3>
		
		<div class="mb-16">
			<Carousel id="featured-projects" showArrows={false} showDots={false} autoplay={false} slidesToShow={2}>
				{featuredProjects.map(project => (
					<div class="carousel-slide px-2">
						<div class="bg-white rounded-lg overflow-hidden shadow-md hover:shadow-lg transition-shadow h-full">
							<img 
								src={project.image || "/placeholder.svg"} 
								alt={project.title} 
								class="w-full h-64 object-cover"
							>
							<div class="flex items-end justify-center mt-4 gap-x-4">
									{project.preview &&
										<a target="_blank" href={project.preview} role="link" class="inline-flex bg-gray-100 text-gray-800 border-gray-300 items-center justify-center gap-2 px-3 py-2 space-x-2 text-base transition dark:text-white dark:bg-gray-800 border dark:border-gray-600 focus-visible:ring-yellow-500/80 text-md hover:bg-gray-800 hover:border-gray-900 group max-w-fit rounded-xl hover:text-white focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black">  
											<svg class="size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
												<path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71"></path>
												<path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71"></path>
											</svg>
											Preview
										</a>
									}
									{project.code &&
										<a target="_blank" href={project.code} role="link" class="inline-flex bg-gray-100 text-gray-800 border-gray-300 items-center justify-center gap-2 px-3 py-2 space-x-2 text-base transition dark:text-white dark:bg-gray-800 border dark:border-gray-600 focus-visible:ring-yellow-500/80 text-md hover:bg-gray-800 hover:border-gray-900 group max-w-fit rounded-xl hover:text-white focus:outline-none focus-visible:outline-none focus-visible:ring focus-visible:ring-white focus-visible:ring-offset-2 active:bg-black">  
											<svg class="size-6" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round">
												<path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
												<path d="M9 19c-4.3 1.4 -4.3 -2.5 -6 -3m12 5v-3.5c0 -1 .1 -1.4 -.5 -2c2.8 -.3 5.5 -1.4 5.5 -6a4.6 4.6 0 0 0 -1.3 -3.2a4.2 4.2 0 0 0 -.1 -3.2s-1.1 -.3 -3.5 1.3a12.3 12.3 0 0 0 -6.2 0c-2.4 -1.6 -3.5 -1.3 -3.5 -1.3a4.2 4.2 0 0 0 -.1 3.2a4.6 4.6 0 0 0 -1.3 3.2c0 4.6 2.7 5.7 5.5 6c-.6 .6 -.6 1.2 -.5 2v3.5"></path>
											</svg>
											Code
										</a>
									}
								</div>
							<div class="p-6">
								<h3 class="text-xl font-semibold mb-2">{project.title}</h3>
								<p class="text-gray-600 mb-4">{project.description}</p>
								<div class="flex flex-wrap gap-2 mb-4">
									{project.tags.map(tag => (
										<span class="px-3 py-1 bg-blue-100 text-blue-600 text-sm rounded-full">
											{tag}
										</span>
									))}
								</div>
								
								
							</div>
						</div>
					</div>
				))}
			</Carousel>
		</div>
		
		<!-- Otros Proyectos -->
		<h3 class="text-2xl font-semibold mb-8">Otros Proyectos</h3>
		
		<div class="mb-8">
			<Carousel id="other-projects" showArrows={true} showDots={true} slidesToShow={3}>
				{otherProjects.map(project => (
					<div class="carousel-slide px-2">
						<div class="bg-white rounded-lg overflow-hidden shadow-sm hover:shadow-md transition-shadow h-full">
							<img 
								src={project.image || "/placeholder.svg"} 
								alt={project.title} 
								class="w-full h-40 object-cover"
							>
							<div class="p-4">
								<h3 class="text-lg font-semibold mb-2">{project.title}</h3>
								<p class="text-gray-600 mb-3 text-sm">{project.description}</p>
								<div class="flex flex-wrap gap-1 mb-3">
									{project.tags.map(tag => (
										<span class="px-2 py-1 bg-blue-50 text-blue-600 text-xs rounded-full">
											{tag}
										</span>
									))}
								</div>
								<a 
									href={project.link} 
									class="inline-block text-blue-600 hover:text-blue-800 transition-colors text-sm font-medium"
								>
									Ver detalles →
								</a>
							</div>
						</div>
					</div>
				))}
			</Carousel>
		</div>
		
		<div class="text-center mt-12">
			<a 
				href="#" 
				class="px-6 py-3 border border-blue-600 text-blue-600 rounded-lg hover:bg-blue-50 transition-colors inline-block"
			>
				Ver más proyectos
			</a>
		</div>
	</div>
</section>

<style>
  /* Responsive adjustments for carousel */
  @media (max-width: 768px) {
    :global(.carousel-container[data-carousel-id="other-projects"] .carousel-slides > *) {
      flex-basis: 50% !important;
      min-width: 50% !important;
    }
  }
  
  @media (max-width: 640px) {
    :global(.carousel-container[data-carousel-id="other-projects"] .carousel-slides > *) {
      flex-basis: 100% !important;
      min-width: 100% !important;
    }
  }
</style>

