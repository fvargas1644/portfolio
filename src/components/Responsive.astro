---
import Carousel from "./Carousel.astro";
---

<div id="destok" class="mb-8 grid grid-cols-2 gap-4">
    <slot />
</div>

<div id="mobile" class="mb-8 mobile-visible">
    <Carousel
        id="articles-carousel"
        showArrows={true}
        showDots={true}
        autoplay={false}
        slidesToShowResponsive={{
            mobile: 1,
            tablet: 2,
            destok: 2,
        }}
    >
        <slot />
    </Carousel>
</div>

<style>
    .isHidden {
        display: none;
    }
</style>

<script>
    // Función para actualizar las clases según el tamaño de la ventana
    function updateScreenSizeClass() {
      const destok = document.getElementById('destok');
      const mobile = document.getElementById('mobile');
      const width = window.innerWidth;


     if(destok && mobile){
        // Luego, agregamos la clase correspondiente según el tamaño de la pantalla
        if (width <= 768) {
            destok.classList.add('isHidden');
            mobile.classList.remove('isHidden');
        }   else {
            mobile.classList.add('isHidden');
            destok.classList.remove('isHidden');
        }
        }
     }
      

    // Agregar el event listener para el cambio de tamaño de la ventana
    window.addEventListener('resize', updateScreenSizeClass);

    // Llamar a la función inicialmente para establecer la clase adecuada
    updateScreenSizeClass();
</script>
