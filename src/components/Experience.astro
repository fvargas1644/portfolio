---
const experiences = [
  {
    position: "Especialista en Desarrollo y Automatización para SOC",
    company: "Password Consulting Services",
    period: "Ene 2025 - Actualmente",
    description: "Integro diversas herramientas SIEM con sistemas de gestión de tickets, desarrollo reglas especializadas para detectar intrusiones no autorizadas y automatizo la generación de informes mediante scripts, entre otras tareas.",
    achievements: [
      "Desarrollé una herramienta especializada para el alertamiento inmediato de alertas críticas a través de Telegram.",
      "Implementé desde cero un sistema que integra herramientas SIEM, como Wazuh, con soluciones de gestión de tickets.",
      "Automatizé la generación de informes mediante COLAB y Looker Studio, optimizando el manejo de grandes volúmenes de datos."
    ]
  },
  {
    position: "Análista de Ciberseguridad",
    company: "Password Consulting Services",
    period: "Nov 2021 - Dic 2024",
    description: "Monitoreo de infraestructuras críticas, cacería de amenazas y detección de intrusos mediante herramientas especializadas como Wazuh, Zabbix, Sumo Logic, FortiSIEM, entre otras.",
    achievements: [
      "Detección de más de 10 ataques ransomware.",
      "Desarrollo de una simulación de ransomware utilizando PowerShell.",
      "Capacitación de nuevos integrantes mediante charlas y boletines de ciberseguridad."
    ]
  },
  {
    position: "Pentester y desarrollador de herramientas automatizadas",
    company: "IACiberseguridad",
    period: "Nov 2022 - Mar 2024",
    description: "Pentesting a infraestructuras críticas, hacking etico, explotación de vulnerabilidades y herramientas de automatización.",
    achievements: [
      "Diseño de herramienta automatizada para el pentesting en directorio activo (RelayNetCommander)",
      "Pentesting a empresas de renombre"
    ]
  }
];
---

<section id="experience" class="bg-gray-50">
  <div class="container mx-auto px-4 py-16">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-16">Mi Experiencia</h2>
    
    <div class="max-w-4xl mx-auto">
      <div class="relative border-l-2 border-blue-300 pl-8 ml-4">
        {experiences.map((exp, index) => (
          <div class={`mb-12 ${index === experiences.length - 1 ? '' : ''}`}>
            <div class="absolute w-4 h-4 bg-blue-600 rounded-full -left-[9px] mt-1.5"></div>
            <div class="bg-white p-6 rounded-lg shadow-md">
              <div class="flex flex-wrap justify-between items-start mb-2">
                <h3 class="text-xl font-bold text-gray-800">{exp.position}</h3>
                <span class="text-sm font-medium text-blue-600 bg-blue-50 px-3 py-1 rounded-full">
                  {exp.period}
                </span>
              </div>
              <p class="text-lg font-medium text-blue-600 mb-3">{exp.company}</p>
              <p class="text-gray-600 mb-4">{exp.description}</p>
              
              <h4 class="font-semibold text-gray-800 mb-2">Logros destacados:</h4>
              <ul class="list-disc pl-5 space-y-1 text-gray-600">
                {exp.achievements.map(achievement => (
                  <li>{achievement}</li>
                ))}
              </ul>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

